<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.bmobsmsdemo.MainActivity">

    <EditText
        android:id="@+id/et_smscode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
    <EditText
        android:id="@+id/et_smsid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
    <Button
        android:id="@+id/sendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sendCode"/>
    <Button
        android:id="@+id/queryState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="queryState"/>
    <Button
        android:id="@+id/ifVerfy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ifVerfy"/>
    <Button
        android:id="@+id/sendCustommessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sendCustommessage"/>

</LinearLayout>
