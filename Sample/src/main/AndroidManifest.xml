<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="xyz.zimuju.sample">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".surface.content.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:host="gk.com"
                    android:pathPrefix="/gk"
                    android:scheme="http">
                </data>
            </intent-filter>
        </activity>

        <activity
            android:name=".surface.content.WebActivity"
            android:launchMode="singleTop"/>
        <!--android:process=":web"-->

        <activity
            android:name=".surface.content.CommonActivity"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"/>

        <activity
            android:name=".surface.content.AboutActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".surface.guide.SimpleViewGuideActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".surface.guide.GuideHomeActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".surface.guide.FullGuideActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".surface.guide.GuideNavigateActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".surface.guide.GuideViewActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".surface.guide.ListGuideActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".surface.navigation.activity.NavigationActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>